{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/verbatim"],
	"compilerOptions": {
		"baseUrl": "./",
		"moduleResolution": "node16",
		"paths": {
			"#root/*": ["src/*.ts"],
			"#lib/*": ["lib/*.ts"],
			"#commands/*": ["src/commands/*.ts"],
			"#functions/*": ["src/functions/*.ts"],
			"#constants": ["src/constants.ts"]
		}
	}
}
